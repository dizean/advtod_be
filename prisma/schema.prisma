generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

//model for Todo items
model Todo {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  owner    String
  task     String
}
//model for owner
model Owner{
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name    String
}

model Account{
  id String    @id @default(auto()) @map("_id") @db.ObjectId
  username String
  password String

  lists Lists[]
}

model Lists{
 id String    @id @default(auto()) @map("_id") @db.ObjectId
 name String
 userId  String @db.ObjectId
 user Account @relation(references: [id], fields: [userId])

 items Items[] 

}
 model Items{
  id String    @id @default(auto()) @map("_id") @db.ObjectId
  name String
  date String
  listId String @db.ObjectId
  lists Lists @relation(references: [id],fields: [listId])
 }

